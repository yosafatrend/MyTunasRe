<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout3"
    tools:context=".profile_school">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cradView"
                style="@style/CardView.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="400dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/kotak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/view"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="16dp"
                        android:elevation="12dp"
                        app:cardCornerRadius="25dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView">

                        <ImageView
                            android:id="@+id/circleImage"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/mytunas" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/name"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Sejarah sekolah"
                        android:fontFamily="@font/opensansbold"
                        app:layout_constraintBottom_toTopOf="@id/desc"
                        app:layout_constraintStart_toEndOf="@id/view"
                        app:layout_constraintTop_toTopOf="@id/view" />

                    <TextView
                        android:id="@+id/desc"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="SMK Tunas Harapan"
                        app:layout_constraintStart_toEndOf="@id/view"
                        app:layout_constraintTop_toBottomOf="@id/name" />

                    <Button
                        android:id="@+id/arrowBtn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/ic_baseline_arrow_drop_down_24"
                        app:layout_constraintBottom_toBottomOf="@id/view"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/view" />


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/desc">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/expandableView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:paddingBottom="12dp"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent">


                            <TextView
                                android:id="@+id/phoneNumber"
                                style="@style/TextAppearance.AppCompat.Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:justificationMode="inter_word"
                                android:text="@string/sejarah"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </ScrollView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cradView2"
                style="@style/CardView.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/cradView">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/kotak2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/view2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="16dp"
                        android:elevation="12dp"
                        app:cardCornerRadius="25dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView">

                        <ImageView
                            android:id="@+id/circleImage2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/mytunas" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/name2"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Jurusan"
                        android:fontFamily="@font/opensansbold"
                        app:layout_constraintBottom_toTopOf="@id/desc2"
                        app:layout_constraintStart_toEndOf="@id/view2"
                        app:layout_constraintTop_toTopOf="@id/view2" />

                    <TextView
                        android:id="@+id/desc2"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="SMK Tunas Harapan"
                        app:layout_constraintStart_toEndOf="@id/view2"
                        app:layout_constraintTop_toBottomOf="@id/name2" />

                    <Button
                        android:id="@+id/arrowBtn2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/ic_baseline_arrow_drop_down_24"
                        app:layout_constraintBottom_toBottomOf="@id/view2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/view2" />


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/desc2">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/expandableView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:paddingBottom="12dp"
                            android:visibility="visible"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/desc">


                            <TextView
                                android:id="@+id/phoneNumber2"
                                style="@style/TextAppearance.AppCompat.Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="1. Multimedia"
                                android:textColor="#000"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/image"
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:src="@drawable/mm"
                                android:layout_marginTop="12dp"
                                app:layout_constraintTop_toBottomOf="@+id/phoneNumber2"
                                tools:layout_editor_absoluteX="12dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/deskripsi"
                                app:layout_constraintTop_toBottomOf="@+id/image"
                                android:layout_marginTop="12dp"
                                android:justificationMode="inter_word"
                                android:textSize="15sp"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </ScrollView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cradView3"
                style="@style/CardView.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/cradView2"
                tools:layout_editor_absoluteX="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/kotak3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/view3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="16dp"
                        android:elevation="12dp"
                        app:cardCornerRadius="25dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView">

                        <ImageView
                            android:id="@+id/circleImage3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/mytunas" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/name3"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Visi dan Misi"
                        android:fontFamily="@font/opensansbold"
                        app:layout_constraintBottom_toTopOf="@id/desc3"
                        app:layout_constraintStart_toEndOf="@id/view3"
                        app:layout_constraintTop_toTopOf="@id/view3" />

                    <TextView
                        android:id="@+id/desc3"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="SMK Tunas Harapan"
                        app:layout_constraintStart_toEndOf="@id/view3"
                        app:layout_constraintTop_toBottomOf="@id/name3" />

                    <Button
                        android:id="@+id/arrowBtn3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/ic_baseline_arrow_drop_down_24"
                        app:layout_constraintBottom_toBottomOf="@id/view3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/view3" />


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/desc3">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/expandableView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:paddingBottom="12dp"
                            android:visibility="visible"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/desc">

                            <TextView
                                android:id="@+id/visi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="VISI"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:fontFamily="@font/opensansergular"
                                android:textColor="#000"
                                android:textAlignment="center"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/school"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="SMK Tunas Harapan Pati"
                                android:textStyle="normal"
                                android:textSize="14sp"
                                android:textColor="#000"
                                android:textAlignment="center"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/visi" />


                            <TextView
                                android:id="@+id/phoneNumber4"
                                style="@style/TextAppearance.AppCompat.Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/visi"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:layout_marginTop="15dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/school" />

                            <TextView
                                android:id="@+id/misi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="MISI"
                                android:textStyle="bold"
                                android:fontFamily="@font/opensansergular"
                                android:textSize="18sp"
                                android:textColor="#000"
                                android:layout_marginTop="22dp"
                                android:textAlignment="center"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/phoneNumber4"/>

                            <TextView
                                android:id="@+id/school2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="SMK Tunas Harapan Pati"
                                android:textStyle="normal"
                                android:textSize="14sp"
                                android:textColor="#000"
                                android:textAlignment="center"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/misi" />


                            <TextView
                                android:id="@+id/phoneNumber3"
                                style="@style/TextAppearance.AppCompat.Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/misi"
                                android:textSize="16sp"
                                android:layout_marginTop="15dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/school2"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </ScrollView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>