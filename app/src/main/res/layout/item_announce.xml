<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lr_layout"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        app:cardCornerRadius="10dp"
        style="@style/CardView.Light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/img_announce"
                android:layout_width="120dp"
                android:layout_height="170dp"
                android:src="@drawable/notfound"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensansbold"
                android:text="Author"
                android:textSize="12dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view4" />

            <View
                android:id="@+id/view4"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:alpha=".5"
                android:background="#bababa"
                android:padding="8dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_announce"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvtopik_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:ellipsize="end"
                android:fontFamily="@font/opensansbold"
                android:maxLength="30"
                android:maxLines="1"
                android:text="Lorem Ipsum dolor sit amet"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/view4"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvtanggal_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 hari yang lalu"
                android:fontFamily="@font/opensansergular"
                android:textSize="12dp"
                android:layout_marginLeft="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvAuthor" />
            <TextView
                android:id="@+id/tvBerita"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensansergular"
                android:ellipsize="end"
                android:maxLength="1000"
                android:maxLines="6"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:justificationMode="inter_word"
                android:layout_marginLeft="12dp"
                android:text="Lorem Ipsum dolor sit amet Lorem Ipsum dolor sit amet Lorem Ipsum dolor sit amet"
                android:textColor="@color/colorTextSubtitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view4"
                app:layout_constraintTop_toBottomOf="@+id/tvtopik_item" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>