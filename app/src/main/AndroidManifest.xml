<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spect.mytunas">

    <application
        android:allowBackup="true"
        android:icon="@drawable/mytunas"
        android:label="@string/app_name"
        android:roundIcon="@drawable/mytunas"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.DetailAnnouncementActivity"></activity>
        <activity android:name=".activity.JobDetailActivity" />

        <service
            android:name=".service.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".activity.ProfileUserActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.ClassroomActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.ProfileSchoolActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.AnnounceActivity" />
        <activity
            android:name=".activity.AuthActivity"
            android:label="home"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.EditProfileActivity" />
        <activity
            android:name=".activity.DashboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.NewsDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.MapsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>